 async function obtenerDatosCripto() {
  const respuesta = await fetch(
    "https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&order=market_cap_desc&per_page=10&page=1&sparkline=false"
  );
  const datos = await respuesta.json();
  const datosFormateados = datos.map((cripto) => ({
    id: cripto.id,
    nombre: cripto.name,
    simbolo: cripto.symbol.toUpperCase(),
    precio_usd: cripto.current_price,
    cambio_24h: cripto.price_change_percentage_24h,
    volumen_24h: cripto.total_volume,
    capitalizacion_mercado: cripto.market_cap,
    imagen: cripto.image,
    descripcion: cripto.description,
    enlace_web: cripto.links.homepage[0],
  }));
  console.log(JSON.stringify(datosFormateados, null, 2)); // Muestra los datos en la consola
  // Aquí puedes guardar los datos en un archivo JSON
}

obtenerDatosCripto();
